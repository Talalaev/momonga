<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/background"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/colorGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/login_greeting"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="8dp"
            android:text="@string/string_user_login"
            android:labelFor="@id/loginactivity_edittext_login"/>

        <EditText
            android:id="@+id/loginactivity_edittext_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="8dp"
            tools:text="User login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:text="@string/string_password"
            android:labelFor="@id/loginactivity_edittext_password"/>

        <EditText
            android:id="@+id/loginactivity_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:inputType="textPassword"
            android:maxLines="1"
            tools:text="Password"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/loginactivity_button_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/string_login"/>

            <Button
                android:id="@+id/loginactivity_button_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/string_cancel"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>