<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/background"
        tools:ignore="ContentDescription"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/singup_greeting"/>

            <EditText
                android:id="@+id/signupactivity_edittext_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/string_user_login"
                android:inputType="textNoSuggestions"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/signupactivity_edittext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/string_email"
                android:inputType="textEmailAddress"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/signupactivity_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="@string/string_password"
                android:inputType="textPassword"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/signupactivity_edittext_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="@string/string_password_confirm"
                android:inputType="textPassword"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="end"
                >

                <Button
                    android:id="@+id/signupactivity_button_signup"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/string_sign_up"/>

                <Button
                    android:id="@+id/signupactivity_button_cancel"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/string_cancel"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>