<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="480px"
        android:layout_height="800px"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24px"
            android:text="@string/singup_greeting"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="16px"
            android:text="@string/string_user_login"/>

        <EditText
            android:id="@+id/signupactivity_edittext_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:padding="16px"
            tools:text="User login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="16px"
            android:text="@string/string_email"/>

        <EditText
            android:id="@+id/signupactivity_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="16px"
            tools:text="User Email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:textAlignment="viewStart"
            android:text="@string/string_password"/>

        <EditText
            android:id="@+id/signupactivity_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:inputType="textPassword"
            android:maxLines="1"
            tools:text="Password"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:textAlignment="viewStart"
            android:text="@string/string_password_confirm"/>

        <EditText
            android:id="@+id/signupactivity_edittext_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16px"
            android:inputType="textPassword"
            android:maxLines="1"
            tools:text="Password"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16px"
            android:gravity="right">

            <Button
                android:id="@+id/signupactivity_button_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_sign_up"/>

            <Button
                android:id="@+id/signupactivity_button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_cancel"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>